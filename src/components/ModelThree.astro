---
import Section from "./Section.astro"
---

<Section
  title="Model 3"
  subtitle="Lease From $349/mo"
  color="white"
  id="model-3"
>

  <div slot="footer" class="gap-x-6 flex mx-auto">
    <a
      class="border-[3px] border-blue-600 bg-blue-600 text-sm rounded font-medium text-white px-12 py-2 inline-block transition-colors hover:border-blue-500 hover:bg-blue-800"
      href="#"
    >
      Order now</a
    >
    <a
      class="bg-white text-sm rounded font-medium px-12 py-2 transition-colors hover:bg-black hover:text-white inline-flex justify-center items-center text-black"
      href="#"
    >
      Lear More</a
    >
  </div>
  
  <img
    slot="background"
    alt="Model 3"
    class="h-full w-full object-cover object-center"
    src="model3.avif"
    id="bg-image-model3"
  />
</Section>

<script>
  function isEdge() {
    if (
      navigator.userAgent.indexOf("Edge") > -1 ||
      navigator.userAgent.indexOf("Edg") > -1
    ) {
      return true
    } else {
      return false
    }
  }

  let imageElement = document.querySelector(
    "#bg-image-model3"
  ) as HTMLImageElement

  if (isEdge()) {
    imageElement.src = "model-3.webp"
  } else {
    imageElement.src = "model3.avif"
  }
</script>